<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" />
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/slate_300" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_chevron_up" android:gravity="end|center_vertical"  android:end="12dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" />
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/slate_300" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_chevron_down" android:gravity="end|center_vertical" android:end="12dp" />
        </layer-list>
    </item>
</selector>